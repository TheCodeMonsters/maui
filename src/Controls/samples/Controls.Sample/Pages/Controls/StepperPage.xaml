<views:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.StepperPage"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base"
    Title="Stepper">
    <views:BasePage.Content>
        <VerticalStackLayout
            Margin="12">
            <Label
                Text="Default"
                Style="{StaticResource Headline}"/>
            <Stepper/>
            <Label
                Text="Disabled"
                Style="{StaticResource Headline}"/>
            <Stepper
                IsEnabled="False"/>
            <Label
                Text="Background"
                Style="{StaticResource Headline}"/>
            <Stepper
                Background="Red"/>
            <Label
                Text="Minimum (25) and Maximum (25)"
                Style="{StaticResource Headline}"/>
            <Stepper
                Minimum="5"
                Maximum="25"/>
            <Label
                Text="Increment (2)"
                Style="{StaticResource Headline}"/>
            <Stepper
                Minimum="0"
                Maximum="100"
                Increment="2"/>
            <Label
                Text="ValueChanged"
                Style="{StaticResource Headline}"/>
            <Stepper
                Minimum="0"
                Maximum="100"
                Increment="1"
                ValueChanged="OnValueChanged"/>
        </VerticalStackLayout>
    </views:BasePage.Content>
</views:BasePage>